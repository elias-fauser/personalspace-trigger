<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.personalspace.triggerapp.UserSelectActivity">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please provide the two participants:"
        android:lines="1"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="-27dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/participantOneListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Participant 1"
        android:lines="1"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="-27dp" />

    <ListView
        android:id="@+id/observerListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/participantTwoListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Participant 2"
        android:lines="1"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="-27dp" />

    <ListView
        android:id="@+id/observedListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/spacer"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:onClick="onSubmit"
        android:id="@+id/button_start"
        android:layout_below="@+id/spacer"/>

</android.support.design.widget.CoordinatorLayout>
