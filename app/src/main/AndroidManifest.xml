<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.personalspace.triggerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.personalspace.triggerapp.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop" />

        <activity
            android:name="com.personalspace.triggerapp.StartActivity"
            android:label="startActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.personalspace.triggerapp.UserSelectActivity"
            android:label="@string/title_activity_user_select"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>